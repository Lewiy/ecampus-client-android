<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context="com.kpi.campus.ui.activity.BulletinContentActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оголошення"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"/>

            <android.support.design.widget.TextInputLayout
                style="@style/Margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edit_text_bulletin_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Тема"
                    android:inputType="text"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edit_text_bulletin_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Текст оголошення"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:minHeight="20dp"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                style="@style/Margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/text_view_start_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:hint="Початок показу"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_view_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_start_period"
                        android:text="@string/bulletin_author"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/text_view_author_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_start_period"
                        android:layout_toEndOf="@id/text_view_author"
                        android:text="test"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/text_view_actuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_view_author"
                        android:layout_marginTop="4dp"
                        android:text="@string/bulletin_actuality"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/text_view_actuality_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_author_name"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/text_view_actuality"
                        android:text="0"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/text_view_end_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:hint="Кінець показу"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text_view_creation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_end_period"
                        android:text="@string/bulletin_creation_date"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/text_view_creation_date_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_end_period"
                        android:layout_toEndOf="@id/text_view_creation_date"
                        android:text="20.01.2015"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/text_view_change_actuality_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_creation_date"
                        android:layout_marginTop="4dp"
                        android:text="@string/bulletin_date_change_actuality"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/text_view_change_actuality_date_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_creation_date_value"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/text_view_change_actuality_date"
                        android:text="21.02.2014"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="8sp"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Одержувач"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/image_view_all"
                    android:text="Всім"
                    android:textColor="@color/colorTextDark"/>

                <Spinner
                    android:id="@+id/spinner_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_all"
                    android:layout_below="@id/tv_all"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    />

                <Spinner
                    android:id="@+id/spinner_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/spinner_profile"
                    android:layout_below="@id/spinner_profile"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    />

                <Spinner
                    android:id="@+id/spinner_subdivision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/spinner_group"
                    android:layout_below="@id/spinner_group"
                    android:layout_marginTop="16dp"
                    />

                <ImageView
                    android:id="@+id/image_view_all"
                    style="@style/Margin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@id/tv_all"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorPrimary"
                    />

                <ImageView
                    android:id="@+id/image_view_profile"
                    style="@style/Margin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@id/spinner_profile"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorPrimary"
                    />

                <ImageView
                    android:id="@+id/image_view_group"
                    style="@style/Margin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@id/spinner_group"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorPrimary"
                    />

                <ImageView
                    android:id="@+id/image_view_subdiv"
                    style="@style/Margin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@id/spinner_subdivision"
                    android:layout_marginRight="24dp"
                    android:background="@color/colorPrimary"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1.0"
                    android:background="@color/colorPrimary"
                    android:text="Очистити"
                    android:elevation="2dp"
                    android:textColor="@color/colorTextIcons"
                    android:textSize="10sp"/>

                <Button

                    android:layout_width="80dp"
                    android:layout_height="36dp"
                    android:layout_weight="1.0"
                    android:background="@color/colorAccent"
                    android:text="Додати"
                    android:elevation="2dp"
                    android:textColor="@color/colorTextIcons"
                    android:textSize="10sp"/>

            </LinearLayout>


            <!--<Button-->
            <!--android:id="@+id/button_add_recipient"-->
            <!--style="@style/Margin"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:text="Додати"-->
            <!--android:textColor="@color/colorTextIcons"-->
            <!--android:textSize="12sp"/>-->

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_buffer_recipients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.kpi.campus.ui.activity.BulletinContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_bulletin"/>

            <TextView
                android:id="@+id/text_view_bulletin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="16dp"
                android:text="До уваги всіх модераторів. До уваги всіх модераторів. До уваги всіх модераторів.До уваги всіх модераторів. До уваги всіх модераторів. До уваги всіх модераторів."
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_action_query_builder"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Період показу"
                android:textColor="@color/colorSecondaryText"
                android:textSize="8sp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/text_view_bulletin_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="15.01.2016"
                android:textColor="@color/colorSecondaryText"
                android:textSize="8sp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/text_view_bulletin_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="20.01.2016"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_action_perm_identity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Публікатор"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/text_view_bulletin_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:text="Іваненко І.І."
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:textSize="8sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
